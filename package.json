{
    "name": "neos-fusion",
    "displayName": "Neos Fusion language support",
    "description": "Fusion and Eel language support for Neos CMS",
    "license": "MIT",
    "icon": "images/neos-fusion-icon.png",
    "galleryBanner": {
        "color": "#26224C",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/networkteam/vscode-neos-fusion.git"
    },
    "version": "1.0.3",
    "publisher": "networkteam",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fusion",
                "aliases": [
                    "Fusion",
                    "fusion"
                ],
                "extensions": [
                    ".fusion"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fusion",
                "scopeName": "source.fusion",
                "path": "./syntaxes/fusion.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:fusion",
        "workspaceContains:**/*.fusion"
    ],
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "build": "pegjs -o src/fusion-parser.js src/fusion.pegjs",
        "test": "mocha tests/**/*.js"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "mocha": "^5.0.4",
        "pegjs": "^0.10.0"
    }
}
